<%= form_for(@information, :url => user_path(@user.id), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>

<div class="form-inputs">
	<fieldset>
		<div class="control-group">
			<%= f.label :avatar, :class => 'control-label' %>
			<%= f.text_field :avatar%>
		</div>
		<div class="control-group">
			<%= f.label 'Country', :class => 'control-label' %>
			<%= f.select :country_id, Country.all.collect { |country| [country.title, country.id] }, :include_blank => true %>
		</div>
		<div class="control-group">
			<%= f.label :city, :class => 'control-label' %>
			<%= f.text_field :city%>
		</div>
		<div class="control-group">
			<%= f.label :gender, :class => 'control-label' %>
			<%= f.select(:gender, %w{ M F }, :include_blank => true) %>
		</div>
		<div class="control-group">
			<%= f.label :date_of_birth, :class => 'control-label' %>
			<%= f.date_select(:date_of_birth) %>
		</div>

		<div class="control-group">
			<%= f.label :about, :class => 'control-label' %>
			<%= f.text_area :about, :class => 'control-input control-text-area'%>
		</div>

	</fieldset>
</div>

<div class="form-actions">
	<div class="for-buttons">
		<%= f.submit "Update", :class => 'btn btn-primary' %>
	</div>
</div>
<% end %>