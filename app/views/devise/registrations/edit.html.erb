<legend><h2>Edit User</h2></legend>
<div class="error-messages"><%= devise_error_messages! %></div>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
  
  <div class="form-inputs">
	<fieldset>
    <div class="control-group"><%= f.label :name, :class => 'control-label' %>
    <%= f.text_field :name, :class => 'text_field' %></div>
  
    <div class="control-group"><%= f.label :surname, :class => 'control-label' %>
    <%= f.text_field :surname, :class => 'text_field' %></div>
  
    <div class="control-group"><%= f.label :email, :class => 'control-label' %>
    <%= f.email_field :email, :class => 'email_field' %></div>

    <div class="control-group"><%= f.label :password, :class => 'control-label' %>
    <%= f.password_field :password, :class => 'password_field' %>
    <i>(leave blank if you don't want to change it)</i>
    </div>

    <div class="control-group"><%= f.label :password_confirmation, :class => 'control-label' %>
    <%= f.password_field :password_confirmation, :class => 'password_field' %>
    <i>(we need your current password to confirm your changes)</i>
    </div>
    </fieldset>
  </div>  


  <div class="form-actions">
  	<div class="for-buttons">
  	  <%= f.submit "Update", :class => 'btn btn-primary' %>
  	  <%= link_to 'Back', :back, :class => 'btn' %>
  	</div>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

